<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.watermelon.footballapp.ui.player.PlayerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="-90dp"
            android:layout_marginEnd="-90dp"
            android:src="@color/top_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circleImageViewStyle" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="-90dp"
            android:layout_marginBottom="-90dp"
            android:src="@color/bottom_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/circleImageViewStyle" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/margin_huge40dp"
            app:layout_constraintBottom_toTopOf="@+id/player_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeableImageView"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/player_lottie"
            tools:src="@color/top_circle" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small8dp"
            android:fontFamily="sans-serif-black"
            android:text="@{viewModel.player.toData().name}"
            android:textColor="#2D2C3E"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/player_position_linear_layout"
            app:layout_constraintEnd_toStartOf="@+id/shapeableImageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView2"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
            app:showWhenSuccess="@{viewModel.player}"
            tools:text="Lionel Messi" />

        <LinearLayout
            android:id="@+id/player_position_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium24dp"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView2"
            app:layout_constraintTop_toBottomOf="@+id/player_name"
            app:showWhenSuccess="@{viewModel.player}">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/player_icon" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/margin_small8dp"
                android:fontFamily="sans-serif-medium"
                android:text="@{viewModel.player.toData().position}"
                android:textColor="#4B4B4B"
                android:textSize="20sp"
                tools:text="attacker" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nationality_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal16dp"
            app:layout_constraintStart_toStartOf="@+id/player_position_linear_layout"
            app:layout_constraintTop_toBottomOf="@+id/player_position_linear_layout"
            app:showWhenSuccess="@{viewModel.player}">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/nationality_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/margin_small8dp"
                android:fontFamily="sans-serif-medium"
                android:text="@{viewModel.player.toData().nationality}"
                android:textColor="#4B4B4B"
                android:textSize="20sp"
                tools:text="Iraqi" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/birthday_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal16dp"
            app:layout_constraintStart_toStartOf="@+id/player_position_linear_layout"
            app:layout_constraintTop_toBottomOf="@+id/nationality_linear_layout"
            app:showWhenSuccess="@{viewModel.player}">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/birthday_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/margin_small8dp"
                android:fontFamily="sans-serif-medium"
                android:text="@{viewModel.player.toData().dateOfBirth}"
                android:textColor="#4B4B4B"
                android:textSize="20sp"
                tools:text="27/5/1999" />

        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/shapeableImageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"
            app:showWhenLoading="@{viewModel.player}" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/shapeableImageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
            app:showWhenError="@{viewModel.player}"
            tools:visibility="gone">

            <include
                layout="@layout/error_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>