<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.watermelon.footballapp.model.response.teamMatches.TeamMatch" />

        <variable
            name="listener"
            type="com.watermelon.footballapp.ui.match.MatchInteractionListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_background"
            android:onClick="@{() -> listener.onMatchClicked(item.id)}"
            android:padding="@dimen/padding_small8dp">


            <TextView
                android:id="@+id/home_team_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@{item.homeTeam.name}"
                android:textColor="@color/primary_text"
                android:ellipsize="end"
                android:textAlignment="center"
                android:lines="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/divider"
                app:layout_constraintEnd_toStartOf="@+id/divider"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/divider"
                tools:text="chelsea" />


            <ImageView
                android:id="@+id/match_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showWhenMatchInPlay="@{item.status}"
                tools:src="@drawable/live_icon" />

            <TextView
                android:id="@+id/away_team_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@{item.awayTeam.name}"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:ellipsize="end"
                android:textAlignment="center"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toTopOf="@+id/divider"
                tools:text="man utd" />

            <TextView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/primary_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/divider" />

            <TextView
                android:id="@+id/match_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:matchDay="@{item.matchday}"
                android:textColor="@color/primary_text"
                tools:text="matchday: 1" />

            <TextView
                android:id="@+id/match_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:matchDate="@{item.utcDate}"
                android:textColor="@color/primary_text"
                app:layout_constraintBaseline_toBaselineOf="@+id/match_day"
                tools:text="2021/11/6" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>