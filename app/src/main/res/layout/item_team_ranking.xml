<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.watermelon.footballapp.model.response.standings.Table" />

        <variable
            name="listener"
            type="com.watermelon.footballapp.ui.table.TableInteractionListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> listener.onTeamClicked(item.team.id)}" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_small8dp"
                tools:background="@color/item_background">

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(item.position)}"
                    android:textColor="@color/primary_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="10"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/team_ranking_icon_size"
                    android:layout_height="@dimen/team_ranking_icon_size"
                    android:layout_marginStart="@dimen/margin_small8dp"
                    imageUrl="@{item.team.crestUrl}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/rank"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/laligaexample" />

                <TextView
                    android:id="@+id/team_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small8dp"
                    android:text="@{item.team.name}"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/primary_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="barcelona" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/played_games"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal16dp"
                        android:text="@{String.valueOf(item.playedGames)}"
                        android:textColor="@color/primary_text"
                        tools:text="8" />

                    <TextView
                        android:id="@+id/games_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal16dp"
                        android:text="@{String.valueOf(item.won)}"
                        android:textColor="@color/primary_text"
                        tools:text="8" />

                    <TextView
                        android:id="@+id/games_draw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal16dp"
                        android:text="@{String.valueOf(item.draw)}"
                        android:textColor="@color/primary_text"
                        tools:text="4" />

                    <TextView
                        android:id="@+id/games_lost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal16dp"
                        android:text="@{String.valueOf(item.lost)}"
                        android:textColor="@color/primary_text"
                        tools:text="5" />

                    <TextView
                        android:id="@+id/goal_difference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal16dp"
                        android:text="@{String.valueOf(item.goalDifference)}"
                        android:textColor="@color/primary_text"
                        tools:text="12" />

                    <TextView
                        android:id="@+id/team_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal16dp"
                        android:text="@{String.valueOf(item.points)}"
                        android:textColor="@color/primary_text"
                        tools:text="50" />

                </LinearLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="205dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>