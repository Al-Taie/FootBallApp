<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.watermelon.footballapp.model.response.competitions.Competition" />

        <variable
            name="listener"
            type="com.watermelon.footballapp.ui.competitionList.CompetitionInteractionListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/item_background"
        android:onClick="@{() -> listener.onCompetitionClicked(item.id)}">

        <ImageView
            android:id="@+id/competition_icon"
            imageUrl="@{item.emblemUrl}"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/margin_normal16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/laligaexample" />

        <TextView
            android:id="@+id/competition_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium24dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-black"
            android:lines="1"
            android:text="@{item.name}"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/competition_icon"
            app:layout_constraintStart_toEndOf="@+id/competition_icon"
            app:layout_constraintTop_toTopOf="@+id/competition_icon"
            tools:text="premier league" />

        <TextView
            android:id="@+id/competition_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@{item.area.name}"
            android:textColor="@color/primary_text"
            app:layout_constraintBottom_toBottomOf="@+id/competition_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/competition_name"
            tools:text="England" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>